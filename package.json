{
    "name": "@woby/wui",
    "version": "1.0.21",
    "publishConfig": {
        "access": "public"
    },
    "description": "A powerful tooltip and menu component library for voby.",
    "main": "./dist/index.es.js",
    "module": "./dist/index.es.js",
    "browser": "./dist/index.es.js",
    "types": "./dist/types/index.d.ts",
    "scripts": {
        "git": "git add . && git commit -m \"Bump version\" && git push",
        "bump": "pnpm version patch",
        "npmjs": "pnpm publish",
        "release": "run-s -c git bump npmjs",
        "//css:watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
        "//css11": "tailwindcss -i ./src/input.css -o ./dist/output.css",
        "declaration": "tsc --build --force --declaration --emitDeclarationOnly --declarationMap  --verbose",
        "declaration:watch": "tsc --build --force --declaration --emitDeclarationOnly --declarationMap  --verbose --watch",
        "watch": "run-p build:watch",
        "build": "run-s build:vite declaration",
        "pretest": "cd ../chk && pnpm build",
        "build:web": "vite build --config=vite.config.web.mts --mode production",
        "web": "vite preview --config=vite.config.web.mts --host",
        "dev:only": "vite --config=vite.config.web.mts --force --mode dev --host",
        "dev": "run-p dev:only",
        "build:vite": "vite build",
        "build:watch": "vite build --watch",
        "preview": "vite preview --config=vite.config.web.mts  --host",
        "docs:generate": "node scripts/generate-docs.js",
        "docs:build": "echo \"Building documentation site\"",
        "test": "vite --config=vite.config.web.mts --host",
        "test:run": "echo \"Running tests\"",
        "test:playwright": "playwright test",
        "test:playwright:ui": "playwright test --ui"
    },
    "keywords": [
        "tooltip",
        "notification",
        "menu",
        "woby",
        "@woby/component"
    ],
    "license": "MIT",
    "peerDependencies": {
        "@woby/modal": "workspace:../modal",
        "@woby/styled": "workspace:../styled",
        "@woby/use": "workspace:../use",
        "nanoid": "^3.3.7",
        "woby": "workspace:../woby"
    },
    "devDependencies": {
        "@playwright/test": "^1.56.1",
        "@tailwindcss/vite": "^4.0.6",
        "@types/node": "^24.9.1",
        "playwright": "^1.56.1",
        "tailwindcss": "^4.0.17",
        "tailwindcss-elevation": "^2.0.0",
        "vite": "6.1.0",
        "vite-plugin-clean": "^1.0.0",
        "vite-plugin-snapshot": "workspace:../../vite-plugin-snapshot"
    },
    "author": "Chi Chong <wongchichong@gmail.com>",
    "homepage": "https://github.com/wobyjs/power-tooltip",
    "repository": {
        "type": "git",
        "url": "git@github.com:wongchichong/power-tooltip.git"
    },
    "dependencies": {
        "@woby/chk": "workspace:../chk",
        "@woby/vite-plugin-test": "workspace:../vite-plugin-test",
        "typescript": "5.7.3"
    }
}